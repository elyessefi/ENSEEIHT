module Produit

  use int.Int
  use ref.Refint

  let produit (a b : int) : int
    requires { (* A COMPLETER *) True }
    ensures  { (* A COMPLETER *) True }
  =
    let la = ref a in
    let lb = ref b in
    if (!lb < 0) then
    (
       la := - !la;
       lb := - !lb
    );
    let s = ref 0 in
    let i = ref 0 in
    while  (!i < !lb) do
      invariant { (* A COMPLETER *) True }
      variant   { (* A COMPLETER *) 0 }
      s :=  (!s) + (!la);
      i := (!i) + 1
    done;
    !s

end